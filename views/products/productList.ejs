<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head.ejs", {title: "Reegalo - Productos" }) %>
        <link rel="stylesheet" href="/stylesheets/app.css">
        <link rel="stylesheet" href="/stylesheets/productList.css">
</head>

<body>

    <!-- Header del Sitio -->

    <%- include("../partials/header.ejs") %>

        <main class="principal">

            <% category_products.forEach (function(item_category) { %>
                <div class="container-categoria">
                    <section class="indicador">
                        <h2 class="detalle_producto">‏‏‎ ‎‏‏‎<%= item_category.description %>
                        </h2>
                    </section>
                    <div class="container-productos">
                        <% item_category.products.forEach (function(item) { %>
                            <% if (item.category_id==item_category.id) { %>
                                <div class="container-producto">
                                    <section class="product-box">
                                        <a href="/productos/<%= item.id %>/detalle">
                                            <% if (item.product_image[0] !=undefined) { %>
                                                <figure class="product-box_image">
                                                    <img src="/images/products/<%= item.product_image[0].image %>"
                                                        alt="imagen de producto">
                                                </figure>
                                                <% } %>
                                                    <article class="product-box_data">
                                                        <p class="product-name">
                                                            <%= item.name %>
                                                        </p>
                                                        <h3>$ <%= item.price %>
                                                        </h3>
                                                        <% if(item.discount > 0) { %>
                                                            <span>
                                                                <%= item.discount %> % OFF
                                                            </span>
                                                            <% } %>
                                                        <p class="product-description">
                                                            <%= item.description %>
                                                        </p>
                                                        <!--                                             <i class="fas fa-gift"></i> -->
                                                    </article>
                                        </a>
                                    </section>
                                </div>
                                <% } %>
                                    <% }) %>
                    </div>
                </div>
                <% }) %>

        </main>

        <!-- Footer del Sitio -->

        <%- include("../partials/footer.ejs") %>
</body>

</html>